%h1 Neuen Mitarbeiter erstellen
= form_for @user do |f|
  = f.label :first_name
  = f.text_field :first_name, :maxlength => 25
  = f.label :last_name
  = f.text_field :last_name, :maxlength => 25
  = f.label :email
  = f.email_field :email
  = f.label :admin
  = f.check_box :admin
  = f.collection_radio_buttons(:organization_id, Organization.all, :id, :name)
  = f.submit 'Erstellen'

= link_to "Back", users_path
